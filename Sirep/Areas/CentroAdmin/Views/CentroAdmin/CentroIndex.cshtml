@model List<Centro>
@{
    ViewData["Title"] = "Gestión de Centros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Centros Piscicolas</h2>
<hr />
@if (Model.Count() > 0)
{
    @foreach (var centro in Model)
    {
        <div class="card mb-5 shadow">
            @*<div class="card-header">
                <h4 class="card-title text-center mb-0">@centro.Nombre</h4>
            </div>*@
            <div class="card-body">
                <h4 class="card-title text-center">@centro.Nombre</h4>
                <hr />
                <div class="row p-4">
                    <div class="col-sm-12 col-lg-6">
                        <div class="card bg-primary mb-3 shadow">
                            <div class="card-body py-3">
                                <div class="row">
                                    <div class="col-3 text-light text-center">
                                        <i class="fas fa-map-pin fa-5x"></i>
                                    </div>
                                    <div class="col-9 py-2">
                                        <h5 class="text-light">Gestión de Lotes</h5>
                                        <div class="text-right">
                                            <a class="btn btn-outline-light" href="/Centro/Lotes/@centro.Id" role="button">
                                                Gestionar <i class="fas fa-tasks"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6">
                        <div class="card bg-info mb-3 shadow">
                            <div class="card-body py-3">
                                <div class="row">
                                    <div class="col-3 text-light text-center">
                                        <i class="fas fa-fish fa-5x"></i>
                                    </div>
                                    <div class="col-9 py-2">
                                        <h5 class="text-light">Gestión de Reproductores</h5>
                                        <div class="text-right">
                                            <a class="btn btn-outline-light" href="/Centro/Reproductores/@centro.Id" role="button">
                                                Gestionar <i class="fas fa-tasks"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-primary m-4 fz-20" role="alert">
        Usted no tiene ningún Centro Piscícola asignado en este momento.
    </div>
}



