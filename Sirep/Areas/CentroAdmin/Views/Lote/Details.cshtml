@model Sirep.Models.Lote

@{
    ViewData["Title"] = "Detalles del Lote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Detalles del Lote</h3>

<div>
    <hr />
    <dl class="row lh-25">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Detalles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Detalles)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Centro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Centro.Nombre)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><i class="far fa-edit"></i> Editar</a>
    @if (Model.Reproductores.Count() > 0)
    {
        <button type="button" class="btn btn-outline-secondary" data-toggle="popover" title="No se puede eliminar"
                data-content="No es posible eliminar este registro porque esta relacionado con @Model.Reproductores.Count() Reproductores.">
            <i class="far fa-trash-alt"></i> Eliminar
        </button>
    }
    else
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i> Eliminar</a>
    }
</div>
<div class="text-center my-4">
    <a href="/Centro/Lotes/@Model.CentroId" class="btn btn-outline-secondary rounded-pill"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
</div>
