@model List<Sirep.Models.Reproductor>

@{
    ViewData["Title"] = "Reproductores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Gestión de Reproductores (@ViewBag.Centro.Nombre)</h2>
<hr />

<h4 class="mt-5 mb-3 text-center">
    Lista de Reproductores
    <a class="btn btn-primary mx-3" asp-action="Create" asp-route-id="@ViewBag.Centro.Id">
        <i class="fas fa-user-plus"></i> Agregar Reproductor
    </a>
</h4>

<div class="table-responsive">
    <table class="table table-hover" id="mytable">
        <thead>
            <tr>
                <th>ChipId</th>
                <th>Lote</th>
                <th>Familia</th>
                <th>Nombre Común</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChipId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lote.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especie.Familia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especie.NombreComun)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                            <i class="far fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">
                            <i class="far fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center my-4">
    <a href="/Centro/Lotes/@ViewBag.Centro.Id" class="btn btn-outline-secondary rounded-pill">
        <i class="fas fa-arrow-left"></i> Volver al Listado de Lotes
    </a>
</div>
