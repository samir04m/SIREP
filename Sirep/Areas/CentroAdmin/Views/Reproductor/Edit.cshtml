@model Sirep.Models.Reproductor

@{
    ViewData["Title"] = "Editar Reproductor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 offset-lg-3 col-lg-6">
        <div class="card shadow">
            <div class="card-header text-center">
                <h5 class="m-0">Editar Reproductor</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="ChipId" class="control-label"></label>
                        <input asp-for="ChipId" class="form-control" />
                        <span asp-validation-for="ChipId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaIngreso" class="control-label"></label>
                        <input asp-for="FechaIngreso" class="form-control" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LugarProcedencia" class="control-label"></label>
                        <input asp-for="LugarProcedencia" class="form-control" />
                        <span asp-validation-for="LugarProcedencia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EspecieId" class="control-label"></label>
                        <select asp-for="EspecieId" class="form-control selectpicker"
                                asp-items="ViewBag.EspecieId" data-live-search="true"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoteId" class="control-label"></label>
                        <select asp-for="LoteId" class="form-control selectpicker"
                                asp-items="ViewBag.LoteId" data-live-search="true"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CuencaId" class="control-label"></label>
                        <select asp-for="CuencaId" class="form-control selectpicker"
                                asp-items="ViewBag.CuencaId" data-live-search="true"></select>
                    </div>
                    <div class="form-group text-center m-0">
                        <input type="submit" value="Guardar cambios" class="btn btn-success px-4" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center my-4">
            <a href="/Centro/Reproductores/@ViewBag.CentroId" class="btn btn-outline-secondary rounded-pill">
                <i class="fas fa-arrow-left"></i> Volver al Listado
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


