@model Sirep.Models.Institucion

@{
    ViewData["Title"] = "Detalles de la Institución";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Detalles de la Institución</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Informacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Informacion)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><i class="far fa-edit"></i> Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i> Eliminar</a>
</div>
<div class="text-center my-4">
    <a asp-action="Instituciones" class="btn btn-outline-secondary rounded-pill"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
</div>
