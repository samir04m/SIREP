@model IEnumerable<Sirep.Models.RepresentanteLegal>

@{
    ViewData["Title"] = "Representantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Gestión de Representantes Legales</h2>
<hr />
<h4 class="mt-5 mb-3 text-center">
    Lista de Representantes
    <a class="btn btn-primary mx-3" asp-action="Create">
        <i class="fas fa-user-plus"></i> Agregar Representante
    </a>
</h4>

<div class="table-responsive">
    <table class="table table-hover" id="mytable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                            <i class="far fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">
                            <i class="far fa-edit"></i>
                        </a>
                        @if (item.Centros.Count() > 0)
                        {
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="popover" title="No se puede eliminar"
                                    data-content="No es posible eliminar este registro porque esta relacionado con @item.Centros.Count() Centros Piscícolas.">
                                        <i class="far fa-trash-alt"></i>
                            </button>
                        }
                        else
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
