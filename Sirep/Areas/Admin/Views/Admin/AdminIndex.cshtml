
@{
    ViewData["Title"] = "Administrador";
}

<h1>Panel de Administrador</h1>
<hr />
<div class="row">
    <div class="col-sm-12 col-lg-6">
        <div class="card border-primary mb-3 shadow">
            <div class="card-header text-white bg-primary">
                <h5 class="mb-0 text-center">Panel de Usuarios</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-3 text-primary">
                        <i class="fas fa-users fa-4x"></i>
                    </div>
                    <div class="col-9">
                        Número de registros: 1
                        <div class="text-right">
                            <a class="btn btn-outline-primary" href="/Admin/Usuarios" role="button">
                                Gestionar <i class="fas fa-tasks"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-lg-6">
        <div class="card border-info mb-3 shadow">
            <div class="card-header text-white bg-info">
                <h5 class="mb-0 text-center">Panel de Representantes Legales</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-3 text-info">
                        <i class="fas fa-user-tie fa-4x"></i>
                    </div>
                    <div class="col-9">
                        Número de registros: 1
                        <div class="text-right">
                            <a class="btn btn-outline-info" href="/Admin/Representantes" role="button">
                                Gestionar <i class="fas fa-tasks"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
