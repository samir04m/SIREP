@model Sirep.Models.Especie

@{
    ViewData["Title"] = "Eliminar Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Eliminar Registro</h3>
<hr />
<div>
    <h4 class="mb-4">¿Está seguro que quierer eliminar este registro?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Familia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Familia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orden)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreComun)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreComun)
        </dd>
    </dl>
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Si, Eliminar" class="btn btn-danger px-4" />
    </form>
</div>

<div class="text-center my-4">
    <a asp-action="Especies" class="btn btn-outline-secondary rounded-pill"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
</div>