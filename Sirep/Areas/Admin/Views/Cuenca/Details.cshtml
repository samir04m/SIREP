@model Sirep.Models.Cuenca

@{
    ViewData["Title"] = "Detalles de la Cuenca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Detalles de la Cuenca</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><i class="far fa-edit"></i> Editar</a>
    @if (Model.Reproductores.Count() > 0)
    {
        <button type="button" class="btn btn-outline-secondary" data-toggle="popover" title="No se puede eliminar"
                data-content="No es posible eliminar este registro porque esta relacionado con @Model.Reproductores.Count() Reproductores.">
            <i class="far fa-trash-alt"></i> Eliminar
        </button>
    }
    else
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i> Eliminar</a>
    }
</div>
<div class="text-center my-4">
    <a asp-action="Cuencas" class="btn btn-outline-secondary rounded-pill"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
</div>
